<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="20dp" android:gravity="center"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/logo_blue_neon"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:contentDescription="MirraMax"/>

    <TextView android:id="@+id/status" android:text="MirraMax" android:textSize="22sp" android:layout_marginTop="12dp"/>

    <Button android:id="@+id/btnStart" android:text="Start Mirroring" android:layout_marginTop="20dp"/>

    <Button android:id="@+id/btnStop" android:text="Stop Mirroring" android:layout_marginTop="8dp"/>
</LinearLayout>
